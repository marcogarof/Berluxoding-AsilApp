<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Intestazione -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Profilo Sanitario"
        android:textSize="24sp"
        android:padding="16dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sezione Patologie -->
    <TextView
        android:id="@+id/textViewPatologie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Patologie:"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewPatologieContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista delle patologie dell'utente"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPatologie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sezione Allergie -->
    <TextView
        android:id="@+id/textViewAllergie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Allergie:"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPatologieContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewAllergieContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista delle allergie dell'utente"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewAllergie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sezione Terapie in corso -->
    <TextView
        android:id="@+id/textViewTerapieInCorso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Terapie in corso:"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewAllergieContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewTerapieInCorsoContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista delle terapie in corso dell'utente"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTerapieInCorso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sezione Vaccinazioni -->
    <TextView
        android:id="@+id/textViewVaccinazioni"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vaccinazioni:"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTerapieInCorsoContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewVaccinazioniContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista delle vaccinazioni dell'utente"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewVaccinazioni"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sezione Parametri Medici -->
    <TextView
        android:id="@+id/textViewParametriMedici"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Parametri Medici:"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewVaccinazioniContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewParametriMediciContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista dei parametri medici dell'utente"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewParametriMedici"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sezione Storia Clinica -->
    <TextView
        android:id="@+id/textViewStoriaClinica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Storia Clinica:"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewParametriMediciContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewStoriaClinicaContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista della storia clinica dell'utente"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewStoriaClinica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sezione Note Mediche -->
    <TextView
        android:id="@+id/textViewNoteMediche"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Note Mediche:"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewStoriaClinicaContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewNoteMedicheContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Note mediche relative all'utente"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewNoteMediche"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</android.support.constraint.ConstraintLayout>
